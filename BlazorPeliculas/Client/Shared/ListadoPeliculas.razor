 @if (Peliculas == null)
    {
        <iframe src="https://giphy.com/embed/L05HgB2h6qICDs5Sms" width="100" height="100" frameBorder="0" class="giphy-embed" allowFullScreen></iframe>
        <text>Cargando...</text>
    }
    else if (Peliculas.Count == 0)
    {
        <text>No hay registros para mostrar</text>
    }
    else
    {
        <input type="checkbox" @bind="MostrarBotones" />
        @foreach (var item in Peliculas)
        {
            <PeliculaIndividual Pelicula="item" EliminarPelicula="EliminarPelicula"
            MostrarBotones="MostrarBotones"/>
        }
    }
@code {

    [Parameter] public List<Pelicula> Peliculas{ get; set; }
    bool MostrarBotones = true;

    void EliminarPelicula(Pelicula pelicula)
    {
        Peliculas.Remove(pelicula);
        Console.WriteLine($"Eliminando la pelicula{pelicula.Titulo}");
    }

    

}
